<section id="favoriesproducts" class="mt-3 mb-3">
    {% if products|length <= 2 %}
    <div class="row">
        {% for product in products %}
        <div class="col-12 col-md-6 col-xl-6 col-xxl-6">
            <div class="card">
                <img class="img-fluid" src="{{vich_uploader_asset(product)}}" alt="{{product.name}}" style="max-height: 304px; min-height:304px;">
            </div>
            <a class="btn btn-change mt-2 w-100" href="{{path('op_gestapp_product_show', {'id': product.id})}}">
                <small class="small_police">{{product.name}}</small>
            </a>
        </div>
        {% else %}
            <div class="col-xs-12 col-sm-6 col-md-4 col-xl-2 col-xxl-2">
                <p>Pas de biens publi√©s</p>
            </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="row justify-content-center">
        <div class="flickity-button-white" data-flickity='{"resize":false, "pageDots": false,"cellAlign": "left", "wrapAround": true, "imagesLoaded": true}'>
            {% for product in products %}
                <div class="col-12 col-md-6 col-xl-3 col-xxl-3">
                    <div class="card">
                        <img class="img-fluid" src="{{vich_uploader_asset(product)}}" alt="{{product.name}}" style="max-height: 304px; min-height:304px;">
                    </div>
                    <a class="btn btn-change mt-2 w-100" href="{{path('op_gestapp_product_show', {'id': product.id})}}">
                        <small class="small_police">{{product.name}}</small>
                    </a>
                </div>
            {% endfor%}
        </div>
    </div>
    {% endif %}
</section>