{% extends 'base.html.twig' %}

{% block meta %}
    {{ parent() }}
    <link rel="icon" href="{{ vich_uploader_asset(parameter, 'faviconFile') }}" />
{% endblock %}

{% block title %}{{ parameter.nameSite }} - Espace Client{% endblock %}

{% block content %}
    <div class="SoeurMarie_back">
        <section class="container">
        <h1>Bienvenue {{ user.firstname }} sur votre espace Client.</h1>

        <div>
            <p>Vous avez actuellement : {{ cartService.detailedCartItem|length }}
                {% if cartService.detailedCartItem|length <= 1 %}
                    produit
                {% else %}
                    produits
                {% endif %}
                dans votre panier. <br>
                <a href="{{ path('op_webapp_cart_showcart')}}" class="btn btn-sm btn-primary">Accéder à votre panier</a>
            </p>
        </div>

        </section>
    </div>

{% endblock %}
