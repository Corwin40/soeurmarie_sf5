<article>
    {% for article in articles %}
    {% if article.isShowtitle == 1 %}
        <header id="article_header">
            <div class="row">
                <div class="col-12">
                    <h2 class="">{{ article.title }}</h2>
                </div>
            </div>
        </header>
    {% else %}
    {% endif %}

    <section id="article_content">
        {% if article.articleFrontName is null %}
            <div class="row">
                <div class="col-12">
                    {% if article.isReadMore == 1 %}
                        <p class="text-center">{{ article.content|u.truncate(600, ' ...')|markdown_to_html }}</p>
                        <p class="text-center"><a href="">Lire la suite ...</a></p>
                    {% else %}
                        <p class="text-center">{{ article.content|markdown_to_html }}</p>
                    {% endif %}
                </div>
                {% if article.isLink %}
                <div class="col-12">
                    <a class="btn btn-change" href="/page/{{ article.linkPage|lower }}">{{article.linktext}}</a>
                </div>
                {% endif %}
            </div>
        {% elseif article.articleFrontName is not null and article.articleFrontPosition == 'right' %}
            <div class="row">
                <div class="col-12 col-md-6 col-lg-9 col-xl-9 col-xxl-9">
                    {% if article.isReadMore == 1 %}
                        {{ article.content|u.truncate(600, ' ...')|markdown_to_html }}
                    {% else %}
                        {{ article.content|markdown_to_html }}
                    {% endif %}
                    {% if article.isLink %}
                        <a class="btn btn-change" href="/page/{{ article.linkPage|lower }}">{{article.linktext}}</a>
                    {% endif %}
                </div>
                <div class="col-12 col-md-6 col-lg-3 col-xl-3 col-xxl-3">
                    <div class="position-relative">
                        <!-- Image -->
                        <img src="{{ vich_uploader_asset(article, 'articleFrontFile', 'App\\Entity\\Webapp\\article') }}" alt="{{ article.articleFrontName }}" class="img-fluid d-block">
                        <!-- Shape -->
                        <div class="shape shape-bottom shape-fluid-x text-white">
                            <svg viewBox="0 0 2880 480" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M2160 0C1440 240 720 240 720 240H0v240h2880V0h-720z" fill="currentColor"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        {% elseif article.articleFrontName is not null and article.articleFrontPosition == 'left' %}
            <div class="row">
                <div class="col-12 col-md-6 col-lg-3 col-xl-3 col-xxl-3">
                    <div class="position-relative">
                        <!-- Image -->
                        <img src="{{ vich_uploader_asset(article, 'articleFrontFile', 'App\\Entity\\Webapp\\article') }}" alt="{{ article.articleFrontName }}" class="img-fluid d-block">
                        <!-- Shape -->
                        <div class="shape shape-bottom shape-fluid-x text-white">
                            <svg viewBox="0 0 2880 480" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M720 0c720 240 1440 240 1440 240h720v240H0V0h720z" fill="currentColor"></path>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-9 col-xl-9 col-xxl-9">
                    {% if article.isReadMore == 1 %}
                        {{ article.content|u.truncate(600, ' ...')|markdown_to_html }}
                    {% else %}
                        {{ article.content|markdown_to_html }}
                    {% endif %}
                    {% if article.isLink %}
                        <a class="btn btn-change" href="/page/{{ article.linkPage|lower }}">{{article.linktext}}</a>
                    {% endif %}
                </div>
            </div>
        {% elseif article.articleFrontName is not null and article.articleFrontPosition == 'up' %}
            <div class="row d-flex justify-content-center">
                <div class="col-12">
                    <div>
                        {% if article.isReadMore == 1 %}
                            <p class="text-center">{{ article.content|u.truncate(600, ' ...')|markdown_to_html }}</p>
                        {% else %}
                            <p class="text-center">{{ article.content|markdown_to_html }}</p>
                        {% endif %}
                    </div>
                </div>
                <div class="col-4">
                    <div class="position-relative">
                        <!-- Image -->
                        <img src="{{ vich_uploader_asset(article, 'articleFrontFile', 'App\\Entity\\Webapp\\article') }}" alt="{{ article.articleFrontName }}" class="img-fluid rounded d-block">
                        <div class="img_border"></div>
                        {% if article.isLink %}
                        <div class="img_overlay d-flex align-items-center justify-content-center">
                            <a class="btn btn-sm btn-card" href="/page/{{ article.linkPage|lower }}">{{article.linktext}}</a>
                        </div>
                        {% endif %}
                    </div>
                </div>

            </div>
        {% elseif article.articleFrontName is not null and article.articleFrontPosition == 'down' %}
            <div class="row">
                <div class="col-4">
                    <div class="position-relative">
                        <!-- Image -->
                        <img class="img-fluid" src="{{ vich_uploader_asset(article, 'articleFrontFile', 'App\\Entity\\Webapp\\article') }}" alt="{{ article.articleFrontName }}">
                        <!-- Shape -->
                        <div class="shape shape-top shape-fluid-x text-white">
                            <svg viewBox="0 0 2880 72" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M2880 0H0v54.112h720s289.42 40.248 705 0c416.5-37.733 735 0 735 0h720V0z" fill="currentColor"></path>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div>
                        {% if article.isReadMore == 1 %}
                            <p>{{ article.content|u.truncate(600, ' ...')|markdown_to_html }}</p>
                        {% else %}
                            <p>{{ article.content|markdown_to_html }}</p>
                        {% endif %}
                        {% if article.isLink %}
                        <a class="btn btn-change" href="/page/{{ article.linkPage|lower }}">{{article.linktext}}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% elseif article.articleFrontName is not null and article.articleFrontPosition == 'none' %}
            <div class="row">
                <div class="col-12">
                    <p class="text-center">
                        <img src="{{ vich_uploader_asset(article, 'articleFrontFile', 'App\\Entity\\Webapp\\article') }}" alt="{{ article.articleFrontName }}" class="img-fluid d-block">
                    </p>
                </div>
            </div>
        {% endif %}
    </section>
    {% if article.isShowdate == 1 %}
    <footer id="article_footer">
        <div class="row">
            <div class="col-12">
                <p>Article crée le : {{ article.createdAt|format_datetime('medium', 'none', locale='fr') }}</p>
                <p>Article modifié le : {{ article.updatedAt|format_datetime('medium', 'none', locale='fr') }}</p>
            </div>
        </div>
    </footer>
    {% else %}
    {% endif %}
    {% endfor %}
</article>

